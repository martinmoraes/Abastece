<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/fundo_cinza"
    android:clipToPadding="false"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/pading8"
    android:paddingTop="@dimen/pading8"
    android:paddingLeft="@dimen/pading8"
    android:paddingRight="@dimen/pading8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:elevation="2dp"
        android:orientation="horizontal">

        <View
            android:id="@+id/vw_divider"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:paddingBottom="@dimen/margin8"
            android:paddingEnd="@dimen/margin8"
            android:paddingLeft="@dimen/margin8"
            android:paddingRight="@dimen/margin8"
            android:paddingStart="@dimen/margin8"
            android:paddingTop="@dimen/margin8">


            <TextView
                android:id="@+id/tv_data_abastecimento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="25/05/2016"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tv_vlt_total"
                android:layout_toLeftOf="@+id/tv_vlt_total"
                android:layout_toStartOf="@+id/tv_vlt_total"
                android:text="Gasto R$: "/>

            <TextView
                android:id="@+id/tv_vlt_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="140,00"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_qtde_litros"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_data_abastecimento"
                android:layout_alignParentLeft="true"
                android:text="500 litros"
                android:layout_marginTop="@dimen/margin8"/>

            <TextView
                android:id="@+id/tv_vlt_litro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/tv_vlt_total"
                android:layout_alignRight="@+id/tv_vlt_total"
                android:layout_below="@+id/tv_vlt_total"
                android:text="3.76 /litro"
                android:layout_marginTop="@dimen/margin8"/>

        </RelativeLayout>

    </LinearLayout>

</FrameLayout>