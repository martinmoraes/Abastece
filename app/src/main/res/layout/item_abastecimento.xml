<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Data: "/>

    <TextView
        android:id="@+id/tv_data_abastecimento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:text="25/05/2016"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="20dp"
        android:gravity="right"/>


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="12dp"
        android:layout_toStartOf="@+id/tv_vlt_total"
        android:layout_toLeftOf="@+id/tv_vlt_total"
        android:text="Gasto R$: "/>

    <TextView
        android:id="@+id/tv_vlt_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="140,00"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="20dp"
        android:gravity="right"/>


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_data_abastecimento"
        android:text="Qtde Lt: "/>

    <TextView
        android:id="@+id/tv_qtde_litros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView4"
        android:layout_toRightOf="@+id/textView4"
        android:text="36,7"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="20dp"
        android:gravity="right"
        android:layout_alignRight="@+id/tv_data_abastecimento"
        android:layout_alignEnd="@+id/tv_data_abastecimento"/>


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vlr/Lt R$: "
        android:layout_alignTop="@+id/tv_vlt_litro"
        android:layout_alignStart="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"/>

    <TextView
        android:id="@+id/tv_vlt_litro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_vlt_total"
        android:layout_toRightOf="@+id/textView3"
        android:text="140,00"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="20dp"
        android:gravity="right"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <View
        android:id="@+id/vw_divider"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_qtde_litros"
        android:background="@color/colorPrimary"/>


</RelativeLayout>